{% extends 'base.html.twig' %}

{% block title %}
  Register
{% endblock %}

{% block body %}
  {% include 'registration/nav.html.twig' %}
  <section class="container text-center text-marronClaire w-50">
      <h1 class="fw-bolder mt-5">
        Inscription
      </h1>
      {{ form_start(registrationForm) }}
        <div class="row mt-5">
            <div class="col">
                {{ form_row(registrationForm.firstname) }}
            </div>
            <div class="col">
            {{ form_row(registrationForm.lastname) }}
            </div>
        </div>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.address) }}
        <div class="row">
            <div class="col">
                {{ form_row(registrationForm.zipcode) }}
                {{ form_row(registrationForm.phone) }}
            </div>
            <div class="col">
                {{ form_row(registrationForm.city) }}
                {{ form_row(registrationForm.mobile_phone) }}
            </div>
      </div>
      {{ form_row(registrationForm.RGPDConsent) }}
      <button type="submit" class="btn btn-marronClaire text-sable btn-lg mt-3">
        M'inscrire
      </button>
      {{ form_end(registrationForm) }}
  </section>
  {% include 'registration/footer.html.twig' %}
{% endblock %}
